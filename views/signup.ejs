<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/meta.ejs')%>
  <body class="bg-content-background">
    <!--Header Partial-->
    <%- include('./partials/header.ejs') %>
    <div class="flex content-center justify-center">
      <div class="mx-48 my-16 flex max-w-fit flex-auto content-center justify-center rounded-2xl bg-white pr-36 pl-16 py-12 shadow-lg">
        <div class="flex flex-col font-Inter">
          <p class="mb-6 font-YsabeauSC text-2xl font-bold tracking-wider text-title-text">Sign Up</p>
          <form action="" method="post">
            <input type="text" name="first_name" id="first_name" class="form-primary" placeholder="First Name" /> <br />
            <input type="text" name="last_name" id="last_name" class="form-primary" placeholder="Last Name" /><br />
            <input type="email" name="email" id="email" class="form-primary" placeholder="Email" /><br />
            <input type="password" name="password" id="password" class="form-primary" placeholder="Password" /><br />
            <input type="password" name="confirm_password" id="confirm_password" class="form-primary" placeholder="Confirm Password" /><br />
            
            <button type="submit" class="my-4 bg-title-text p-3 font-Raleway text-base font-semibold text-white rounded-md w-full hover:ring-offset-0 hover:ring-2 hover:ring-title-text">Sign me Up</button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
